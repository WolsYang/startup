<%= simple_form_for @user do |f| %>
  <%= f.input :name, label: '用戶名', error: '請輸入用戶名' %><br />
  <%= f.input :email, label: 'Email', error: '請輸入email' %><br />
  <%= f.input :password, lable: '密碼', error: ' 請輸入密碼' %><br />
